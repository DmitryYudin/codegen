{
    "extends": "@tsconfig/node18/tsconfig.json",

    "compilerOptions": {
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@service/*": ["src/*"],
            "@generated/*": ["gen/*"],
            "@test/*": ["test/*"],
        },
        "experimentalDecorators": true
    }
}